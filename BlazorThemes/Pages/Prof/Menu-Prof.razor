@page "/menu_prof"
@using MudBlazor

<!-- Importação do MudBlazor -->
<MudLayout>
    <!-- Barra superior da aplicação -->
    <MudAppBar Elevation="4">
        <!-- Botão para abrir/fechar o menu lateral -->
        <MudButton Icon="@Icons.Material.Filled.Menu" OnClick="ToggleMenu" />
        <MudSpacer />
        <!-- Botão para alternar entre temas claro e escuro -->
        <MudIconButton 
            Icon="@(IsDarkMode ? Icons.Material.Filled.WbSunny : Icons.Material.Filled.NightsStay)" 
            OnClick="ToggleTheme" />
    </MudAppBar>

    <!-- Menu lateral comprimido -->
    <MudDrawer Open="IsMenuOpen" Variant="DrawerVariant.Mini">
        <MudList T="MudListItem<T>">
            <!-- Itens do menu com ícones e links -->
            <MudListItem Href="/cadastro-turma">
                <MudIcon Icon="@Icons.Material.Filled.PersonAdd" />
                <MudText>Cadastrar Turmas</MudText>
            </MudListItem>
            
            <MudListItem Href="/lancar-notas">
                <MudIcon Icon="@Icons.Material.Filled.Edit" />
                <MudText>Lançar Notas</MudText>
            </MudListItem>
            
            <MudListItem Href="/planear-aula">
                <MudIcon Icon="@Icons.Material.Filled.Class" />
                <MudText>Planear Aulas</MudText>
            </MudListItem>
            
            <MudListItem Href="/estatisticas">
                <MudIcon Icon="@Icons.Material.Filled.BarChart" />
                <MudText>Estatísticas</MudText>
            </MudListItem>
            
            <MudListItem Href="/sobre">
                <MudIcon Icon="@Icons.Material.Filled.Info" />
                <MudText>Sobre</MudText>
            </MudListItem>
        </MudList>
    </MudDrawer>

    <!-- Área principal do conteúdo -->
    <MudMainContent>
        <MudContainer>
            <MudText Typo="Typo.h4">Bem-vindo ao Sistema</MudText>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool IsMenuOpen = false; // Estado do menu lateral
    private bool IsDarkMode = false; // Estado do tema da aplicação

    // Alterna a visibilidade do menu lateral
    private void ToggleMenu()
    {
        IsMenuOpen = !IsMenuOpen;
    }

    // Alterna entre tema claro e escuro
    private void ToggleTheme()
    {
        IsDarkMode = !IsDarkMode;
    }

    public class T
    {
    }

}





