@page "/guia-interativo-professor"
@using MudBlazor

<MudContainer>
    <!-- Cabeçalho -->
    <MudCard Class="mud-theme-background text-center p-4">
        <MudText Typo="Typo.h4" Class="fade-in">Guia Interativo do Sistema Acadêmico</MudText>
        <MudText Class="fade-in">Facilitando a gestão do sistema escolar</MudText>
    </MudCard>

    <!-- Barra de Navegação -->
    <MudAppBar Elevation="1">
        <MudToolbar>
            <MudText Typo="Typo.h6">Guia do Sistema Acadêmico</MudText>
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="ToggleDrawer" />
        </MudToolbar>
    </MudAppBar>

    <MudDrawer @bind-Open="drawerOpen" Position="DrawerPosition.Left" Variant="DrawerVariant.Mini">
        <MudList T="bool">
            <MudListItem Href="#seguranca" T="bool">
                <MudIcon Icon="@Icons.Material.Filled.Security" />
                <MudText>Segurança</MudText>
            </MudListItem>
            
            <MudListItem Href="#calendario" T="bool">
                <MudIcon Icon="@Icons.Material.Filled.CalendarToday" />
                <MudText>Calendário Acadêmico</MudText>
            </MudListItem>
            
            <MudListItem Href="#tema" T="bool">
                <MudIcon Icon="@Icons.Material.Filled.Brightness6" />
                <MudText>Alternância de Tema</MudText>
            </MudListItem>
        </MudList>
    </MudDrawer>

    <!-- Seções -->
    <MudPaper Class="p-4 mt-3" Elevation="2" Id="seguranca">
        <MudText Typo="Typo.h5">🔒 Segurança no Sistema</MudText>
        
        <MudList T="bool">
            <MudListItem T="bool">Senhas fortes e autenticação em duas etapas.</MudListItem>
            <MudListItem T="bool">Proteção contra ataques (SQL Injection, XSS).</MudListItem>
            <MudListItem T="bool">Conexões seguras (HTTPS).</MudListItem>
        </MudList>
    </MudPaper>

    <MudPaper Class="p-4 mt-3" Elevation="2" Id="calendario">
        <MudText Typo="Typo.h5">📅 Calendário Acadêmico</MudText>
        
        <MudText>O sistema contém um calendário interativo para que os alunos e professores possam acompanhar as atividades acadêmicas.</MudText>
    </MudPaper>

    <MudPaper Class="p-4 mt-3" Elevation="2" Id="tema">
        <MudText Typo="Typo.h5">🌙 Alternância de Tema</MudText>
        
        <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="ToggleTheme">
            <MudIcon Icon="@Icons.Material.Filled.Brightness4" /> Alternar Tema
        </MudButton>
    </MudPaper>

    <!-- Botão de Scroll to Top -->
    <MudFab 
        Icon="@Icons.Material.Filled.ArrowUpward" 
        Color="Color.Primary" 
        Class="mud-fab-bottom-right" 
        OnClick="ScrollToTop" />
</MudContainer>

@code {
    private bool drawerOpen = false;
    private void ToggleDrawer() => drawerOpen = !drawerOpen;
    
    private void ToggleTheme() {
        // Lógica para alternar tema escuro/claro
    }
    
    private void ScrollToTop() {
        // Lógica para rolar até o topo da página
    }
}
